{
  "name": "native-color-cards",
  "version": "1.0.0-alpha.1",
  "description": "Color cards (Shortcuts.app style) for React Native",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/native-color-cards.min.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build:dev && npm run build",
    "build": "webpack --env build",
    "build:dev": "webpack --env dev",
    "watch": "npm run build -- --watch",
    "watch:dev": "npm run build:dev -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/native-color-cards.git"
  },
  "keywords": ["TypeScript", "React", "React Native", "colors", "cards"],
  "bugs": {
    "url": "https://github.com/JB1905/native-color-cards/issues"
  },
  "homepage": "https://github.com/JB1905/native-color-cards#readme",
  "dependencies": {
    "color": "^3.1.2",
    "expo-blur": "^7.0.0",
    "expo-haptics": "^7.0.0",
    "expo-linear-gradient": "^7.0.1",
    "react-native-drag-drop-grid-library": "^1.0.7",
    "react-native-drag-sort": "^1.3.6",
    "react-native-draggable-animation-list": "^1.1.1",
    "react-native-draggable-flatlist": "^1.1.9",
    "react-native-draggable-grid": "^1.1.1",
    "react-native-draggable-list": "^1.0.0",
    "react-native-sortable-grid": "^2.0.0",
    "react-native-touchable-scale": "^2.1.0",
    "react-native-vector-icons": "^6.6.0",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@types/color": "^3.0.0",
    "@types/expo": "^33.0.1",
    "@types/react": "^16.9.14",
    "@types/react-native-vector-icons": "^6.4.4",
    "@types/styled-components": "^4.4.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-native": "^0.61.5",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": ["npm run prettier", "npm run lint", "git add"]
  }
}
