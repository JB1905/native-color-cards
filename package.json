{
  "name": "native-color-cards",
  "version": "1.0.0-alpha.1",
  "description": "Color cards (Shortcuts.app style) for React Native",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "main": "lib/native-color-cards.cjs.js",
  "module": "lib/native-color-cards.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "release": "rimraf lib/* && npm run prettier && npm run lint && npm run build",
    "build": "rollup -c",
    "watch": "npm run build -- --watch",
    "lint": "eslint --fix 'src/**/*.{tsx,ts}'",
    "prettier": "prettier --write 'src/**/*.{tsx,ts}'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JB1905/native-color-cards.git"
  },
  "keywords": [
    "TypeScript",
    "React",
    "React Native",
    "colors",
    "cards"
  ],
  "bugs": {
    "url": "https://github.com/JB1905/native-color-cards/issues"
  },
  "homepage": "https://github.com/JB1905/native-color-cards#readme",
  "dependencies": {
    "color": "^3.1.2",
    "expo-blur": "^8.0.0",
    "expo-haptics": "^8.0.0",
    "expo-linear-gradient": "^8.0.0",
    "react-native-drag-drop-grid-library": "^1.0.7",
    "react-native-drag-sort": "^1.3.6",
    "react-native-draggable-animation-list": "^1.1.1",
    "react-native-draggable-flatlist": "^2.1.2",
    "react-native-draggable-grid": "^1.2.1",
    "react-native-draggable-list": "^1.0.0",
    "react-native-sortable-grid": "^2.0.0",
    "react-native-touchable-scale": "^2.1.0",
    "react-native-vector-icons": "^6.6.0",
    "styled-components": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "@types/color": "^3.0.1",
    "@types/expo": "^33.0.1",
    "@types/react": "^16.9.19",
    "@types/react-native-vector-icons": "^6.4.5",
    "@types/styled-components": "^4.4.2",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^4.0.10",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-native": "^0.61.5",
    "rollup-plugin-terser": "^5.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.59.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{tsx,ts}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
